{
  "name": "bot-whatsapp-ai",
  "version": "1.0.0",
  "description": "WhatsApp Bot with Gemini AI and Electron",
  "main": "./out/main/index.js",
  "author": "Antigravity",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "typecheck:node": "tsc --p tsconfig.node.json --noEmit",
    "typecheck:renderer": "tsc --p tsconfig.web.json --noEmit",
    "typecheck": "npm run typecheck:node && npm run typecheck:renderer",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "start:vps": "HEADLESS=true node out/main/server.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@google/generative-ai": "^0.21.0",
    "@kobalte/core": "^0.13.9",
    "@solidjs/router": "^0.15.3",
    "@types/node-cron": "^3.0.11",
    "@whiskeysockets/baileys": "^6.7.11",
    "better-sqlite3": "^11.8.1",
    "cheerio": "^1.2.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "duck-duck-scrape": "^2.2.7",
    "fastify": "^5.7.4",
    "html-to-text": "^9.0.5",
    "lucide-solid": "^0.474.0",
    "node-cron": "^4.2.1",
    "pino": "^9.6.0",
    "qrcode-terminal": "^0.12.0",
    "solid-js": "^1.9.10",
    "tailwind-merge": "^3.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.1",
    "autoprefixer": "^10.4.20",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "postcss": "^8.5.1",
    "tailwindcss": "3.4.17",
    "typescript": "^5.7.3",
    "vite": "^5.4.11",
    "vite-plugin-solid": "^2.11.0"
  }
}